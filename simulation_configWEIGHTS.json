{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 232500,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -80.0
  },
  "inputs": {
    "tone_spikes": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$BASE_DIR/tone_spikes.csv",
      "node_set": "tone"
    },
    "shock_spikes": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$BASE_DIR/shock_spikes.csv",
      "node_set": "shock"
    },
    "mthalamus_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/mthalamus_spikes.h5",
      "node_set": "mthalamus"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "syn_report": {
      "cells": "all",
      "variable_name": "W",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "tone2pyr",
      "file_name": "syns_tone2pyr.h5"
    },
    "syn_report": {
      "cells": "all",
      "variable_name": "W_ampa",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "pyr2pyr",
      "file_name": "syns_pyr2pyr.h5"
    },
    "syn_report": {
      "cells": "all",
      "variable_name": "W",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "int2pyr",
      "file_name": "syns_int2pyr.h5"
    },
    "syn_report": {
      "cells": "all",
      "variable_name": "W_ampa",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "pyr2int",
      "file_name": "syns_pyr2int.h5"
    }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "$BASE_DIR/circuit_config.json"
}
